FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "../parms"

dimensions      [0 0 0 1 0 0 0];

internalField   uniform $T_set;

boundaryField
{
    top
    {
        type            cyclic;
    }

    bottom
    {
        type            cyclic;
    }

    walls
    {
        type            fixedValue;
        value           uniform $T_wall;
    }

    frontAndBack
    {
        type            empty;
    }
}


